<Window x:Class="Attempt11.Views.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Attempt11.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:viewmodel="clr-namespace:Attempt11.ViewModels"
        Title="AddEditWindow" Height="500" Width="400">
    <Window.DataContext>
        <viewmodel:AddEditStudentWindowVM/>
    </Window.DataContext>
    <Grid>
        <Grid.Resources>
            <LinearGradientBrush x:Key="MyGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2E333A" Offset="0"/>

            </LinearGradientBrush>
        </Grid.Resources>
        <Grid.Background>
            <StaticResource ResourceKey="MyGradient"/>
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Border VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock 
                    FontSize="18"
                    FontWeight="Normal"
                        Foreground="White"
                    Text="Add Student"/>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock 
                    FontSize="18"
                    VerticalAlignment="Center"
                    Margin="25 0 0 0"
                    Text="First Name"
                       Foreground="White"
                    Grid.Row="0" 
                    Grid.Column="0"/>
                <TextBox
                    Text="{Binding FirstName}"
                    Margin="10 0 20 0"
                    VerticalAlignment="Center"
                    Padding="2"
                    FontSize="16"
                    Grid.Row="0" 
                    Grid.Column="1"/>

                <TextBlock 
                    FontSize="18"
                    VerticalAlignment="Center"
                    Margin="25 0 0 0"
                    Text="Last Name"
                       Foreground="White"
                    Grid.Row="1" 
                    Grid.Column="0"/>
                <TextBox
                    Text="{Binding LastName}"
                    Margin="10 0 20 0"
                    VerticalAlignment="Center"
                    Padding="2"
                    FontSize="16"
                    Grid.Row="1" 
                    Grid.Column="1"/>

                <StackPanel 
                    VerticalAlignment="Center"
                    Grid.Row="2" 
                    Grid.Column="0">
                    <TextBlock 
                        FontSize="18"
                           Foreground="White"
                        VerticalAlignment="Center"
                        Margin="25 0 0 0"
                        Text="Date of Birth"
                        />
                    <TextBlock
                        HorizontalAlignment="Center"
                           Foreground="White"
                        Text="(mm/dd/yyyy)"
                        />
                </StackPanel>

                <DatePicker
                    SelectedDateFormat="Short"
                    Text="{Binding DateOfBirth, Mode=TwoWay}"
                    SelectedDate="{x:Static sys:DateTime.Now}"
                    Margin="10 0 20 0"
                    VerticalAlignment="Center"
                    Padding="2"
                    FontSize="16"
                    Grid.Row="2" 
                    Grid.Column="1" DisplayDateStart="1980-01-01">
                    <DatePicker.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Color="#FFA3AEB9"/>
                            <GradientStop Color="#FF8399A9" Offset="0.375"/>
                            <GradientStop Color="#FF718597" Offset="0.375"/>
                            <GradientStop Color="#FF8986D8" Offset="1"/>
                        </LinearGradientBrush>
                    </DatePicker.BorderBrush>
                </DatePicker>

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Text="Upload your photo"
                    FontSize="16"
                       Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="3" 
                Grid.Column="1">
                    <Button
                        Command="{Binding UploadPhotoCommand}"
                        HorizontalAlignment="Left" 
                        Height="22"
                        Width="50"
                        Content="Upload"
                        Margin="10 0 20 0"
                        VerticalAlignment="Center"
                        Padding="2"
                        FontSize="12"/>
                    <Image
                        Height="60"
                        Width="60"
                        Source="{Binding Image}"/>
                </StackPanel>
                <TextBlock 
                    FontSize="18"
                    VerticalAlignment="Center"
                    Margin="25 0 0 0"
                    Text="GPA"
                       Foreground="White"
                    Grid.Row="4" 
                    Grid.Column="0"/>
                <TextBox
                     Text="{Binding GPA}"
                     Margin="10 0 20 0"
                     VerticalAlignment="Center"
                     Padding="2"
                     FontSize="16"
                     Grid.Row="4" 
                     Grid.Column="1"/>
            </Grid>

            <Grid Grid.Row="2" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Button 
                         Command="{Binding SaveCommand}"
                         Margin="20 20 0 20"
                         FontWeight="Bold"
                         FontSize="18"
                         Height="40"
                         Width="100"
                         Content="SAVE"
                         />
                    <Button 
                        Command="{Binding CancelCommand}"
                        Margin="20"
                        FontWeight="Bold"
                        FontSize="18"
                        Height="40"
                        Width="100"
                        Content="CANCEL"
                        />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
